# youplace
$metka = $ARGS[0]
$loc = $CURLOC
clr
gs 'stat'
gs 'time'
'<center><h4>Your Land</h4></center>'

if placeMansion < 2:'<center><img src="images/etogame/yzemelniy.jpg"></center>'
if placeMansion = 2:'<center><img src="images/etogame/ystart.jpg"></center>'
