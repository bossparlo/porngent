	act 'Pay for the construction and external finish of the building (1,500,000 rubles)':
		cls
		karta -= 1500000
		placeMansion = 3
		minut += 5
		gs 'stat'
		'You paid for the construction of housing mansion'

		act 'Leave':gt $curloc
	end
end

