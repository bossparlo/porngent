
# subkid
if kid > 0:
	kidIteration = 1
	kidSelected = 0
	kidLoops = 0
	:loop
	kidSelected[kidLoops] = kidIteration
	pl '<a href="exec:kidSelected = kidSelected[kidLoops]& gt ''kid'',''start'' ">In the crib lies <<$kidname[kidIteration]>>.</a>'
	kidIteration += 1
	kidLoops += 1

	if kidIteration <= numkid:jump 'loop'
end

