				if vesrand >= 75:
					publichot -= rand(5, 10)
					'In the hall they laugh at you, "Look how fat she hang out. Aga and ass shaking like jelly."'
				end
			end

			dynamic $pubhotdi

			act 'further':gt $curloc
		end

		act 'Dance around a pole 5 minutes (<<stpredmet>> garments)':
			cls
			minut += 5
			stpredmet -= 1
			sweat += 2
			fat -= 5
			manna -= rand(10, 50)

			if stpredmet = 1:hapri = 0
			if stpredmet = 0:mop = 0 & stripdancesum += 1

