$privatdancedi = {
	act 'Go for a lap dance':
		cls
		minut += 30
		money += 800
		sweat = 1
		hapri = 0
		mop = 0
		fat -= 5
		stripdancesum += 1

		if stprrand = 0:gt 'stwork2', 'pr1'
		if stprrand = 1:gt 'stwork2', 'pr2'
		if stprrand = 2:gt 'stwork2', 'pr3'

		gs 'stat'
		'<center><img src="images/etogame/privatstrip.jpg"></center>'
		'In a separate room to the music you within half an hour showed different erotic dancing client.'

		act 'Go to the locker room':gt 'stwork', 'start'
	end
}

