					if fingalrand >= 75:
						fingal += rand(2, 5)
						'When you fall, you greatly venerated person on the floor and it seems you have a bruise on his face blurred.'
					end
				end

				if vesrand >= 50:
					publichot -= rand(5, 10)
					'In the hall they laugh at you, "Look how fat she hang out. Aga and ass shaking like jelly."'
				end
			end

			dynamic $pubhotdi

			act 'further':gt $curloc
		end
	end

	if stpredmet = 0:
		if publichot >= 80 and publichot < 90:
			privatrand = rand(0, 100)

			if privatrand >= 90:
				'After the dance, the guard showed you that you have a customer for a private dance.'
				dynamic $privatdancedi
				exit
			end
		end

		if publichot >= 90:
			privatrand = rand(0, 100)

			if privatrand >= 70:
				'After the dance, the guard showed you that you have a customer for a private dance.'
				dynamic $privatdancedi
				exit
			end
		end
	end
else
	'Working time is over. Time to go home.'
end

act 'Quit the stage':gt 'stwork', 'start'


