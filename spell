	end
end

if $ARGS[0] = 'stun':
	cla
	'You need to touch up the enemy, then he will be paralyzed. Cost 20 mana.'

	act 'Paralytic stroke':
		cla
		*clr
		manna -= 20
		stunner = 1
		xgt 'atak', 'player'
	end

	act 'Physical attacks':gt 'boxing'

